	</menu>

	<menu name="Camera" desc="Camera Options">
		<checkbox id="cameraMovement" name="Custom Camera Movement" value="true"/>
		<number id="cameraAngleMovement" name="Movement Angle" min="1" max="10" change="1" value="1"/>
		<number id="cameraMovementAmount" name="Movement Amount" min="10" max="80" change="5" value="40"/>
	</menu>

	<menu name="Visual" desc="Visual Options">
		<checkbox id="opponentNoteSplashes" name="Opponent Note Splashes" value="true"/>
		<checkbox id="keybindReminders" name="Keybind Reminders" value="true"/>
		<checkbox id="extraInformation" name="Extra Score Information" value="true"/>
	</menu>

	<menu name="Misc" desc="Misc Options">
		<checkbox id="developerMode" name="Developer Options" value="false"/>
	</menu>

