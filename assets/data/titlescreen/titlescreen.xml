<!DOCTYPE codename-titlestate >
<titlestate>
	<sprites folder="menus/titlescreen">
		<sprite name="bg" sprite="bg_lemon" x="-250" y="-150" scale="0.85" beatInterval="1"/>

		<sprite name="shaggy" sprite="shaggy" x="612" y="0" scale="0.8">
			<anim name="dance" anim="shaggy_idle" loop="true"/>
		</sprite>

		<sprite name="scooby" sprite="scooby" x="712" y="225" scale="0.6">
			<anim name="dance" anim="scoob_idle" loop="true"/>
		</sprite>

		<sprite name="logo" sprite="logoShag" x="-150" y="-100" scale="0.9" beatInterval="1"/>

		<titleEnter sprite="titleEnter" x="-150" y="-100" />
	</sprites>

	<intro length="16">
		<text beat="1">
			<line text="Mod by" />
		</text>

		<text beat="3">
			<line text="Mod by" />
			<line text="Perez" />
			<line text="Moro" />
			<line text="Pointy" />
			<line text="Saruky" />
			<line text="Joan Atlas" />
		</text>

		<text beat="4" />
		<!-- clears the screen !-->

		<text beat="5">
			<line text="A mod for" />
			<line text="this game" />
		</text>

		<text beat="7">
			<line text="A mod for" />
			<line text="this game" />
			<sprite path="menus/titlescreen/newgrounds_logo" scale="0.8"/>
		</text>

		<text beat="8" />
		<!-- clears the screen !-->

		<text beat="9">
			<introtext line="1" />
		</text>

		<text beat="11">
			<introtext line="1" />
			<introtext line="2" />
		</text>

		<text beat="12">
			<line text="Friday" />
		</text>

		<text beat="13">
			<line text="Friday" />
			<line text="Night" />
		</text>

		<text beat="14">
			<line text="Friday" />
			<line text="Night" />
			<line text="Funkin'" />
		</text>
		
		<text beat="15">
			<line text="Friday" />
			<line text="Night" />
			<line text="Funkin'" />
			<line text="Vs Shaggy" />
		</text>
	</intro>
</titlestate>